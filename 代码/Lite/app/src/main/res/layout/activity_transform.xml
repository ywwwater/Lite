<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:textSize="40sp"
        android:id="@+id/input" />

    <View
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        android:id="@+id/line"
        android:layout_height="1dp"
        android:background="#303F9F" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIN"
        android:onClick="binClick"
        android:tag="0"
        android:id="@+id/bin"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_button"
        app:layout_constraintTop_toBottomOf="@+id/line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/bin"
        app:layout_constraintBottom_toBottomOf="@id/bin"
        android:id="@+id/binNum"
        app:layout_constraintLeft_toRightOf="@id/bin"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCT"
        android:onClick="octClick"
        android:tag="0"
        android:id="@+id/oct"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/bin"
        android:background="@drawable/white_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/oct"
        app:layout_constraintBottom_toBottomOf="@id/oct"
        android:id="@+id/octNum"
        app:layout_constraintLeft_toRightOf="@id/oct"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEC"
        android:onClick="decClick"
        android:tag="1"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_button"
        android:id="@+id/dec"
        app:layout_constraintTop_toBottomOf="@+id/oct"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/dec"
        app:layout_constraintBottom_toBottomOf="@id/dec"
        android:id="@+id/decNum"
        app:layout_constraintLeft_toRightOf="@id/dec"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEX"
        android:onClick="hexClick"
        android:tag="0"
        android:id="@+id/hex"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_button"
        app:layout_constraintTop_toBottomOf="@+id/dec"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/hex"
        app:layout_constraintBottom_toBottomOf="@id/hex"
        android:id="@+id/hexNum"
        app:layout_constraintLeft_toRightOf="@id/hex"
        android:layout_marginLeft="20dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="5"
        android:rowCount="4">

        <Button
            android:id="@+id/b1"
            android:text="1"
            android:onClick="p1"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b2"
            android:text="2"
            android:onClick="p2"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b3"
            android:text="3"
            android:onClick="p3"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/ba"
            android:enabled="false"
            android:text="A"
            android:onClick="pa"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/bb"
            android:enabled="false"
            android:text="B"
            android:onClick="pb"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b4"
            android:text="4"
            android:onClick="p4"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b5"
            android:text="5"
            android:onClick="p5"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b6"
            android:text="6"
            android:onClick="p6"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/bc"
            android:enabled="false"
            android:text="C"
            android:onClick="pc"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/bd"
            android:enabled="false"
            android:text="D"
            android:onClick="pd"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b7"
            android:text="7"
            android:onClick="p7"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b8"
            android:text="8"
            android:onClick="p8"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b9"
            android:text="9"
            android:onClick="p9"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/be"
            android:enabled="false"
            android:text="E"
            android:onClick="pe"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/bf"
            android:enabled="false"
            android:text="F"
            android:onClick="pf"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:id="@+id/b0"
            android:text="0"
            android:onClick="p0"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:text="CLR"
            android:textColor="#ff0000"
            android:onClick="clr"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

        <Button
            android:text="DEL"
            android:textColor="#ff0000"
            android:onClick="del"
            android:background="@drawable/white_button"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="70dp"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>